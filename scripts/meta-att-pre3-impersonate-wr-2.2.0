#!/bin/bash
# meta-att-pre3-impersonate-wr-2.2.0 script
# Intended to flash AT&T Pre 3 phones so that they impersonate a WR Pre 3
#  Your mileage may vary

[ -d scripts ] || { echo "Run the script from the meta-doctor directory, not the scripts directory" ; exit ; }

W220_JAR_URL="http://palm.cdnetworks.net/rom/manta/p220r0d08222011/wdmantarow/webosdoctorp220mantawr.jar"

W220_FILE="webosdoctorp220manta-wr-2.2.0.jar"

W220_BUILD="pre3-p220manta-wr-2.2.0"

W220_MD5="319ce80db93a2fc845a004d60fc3735b"

PATIENT="meta-att-pre3-impersonate-wr-2.2.0"

git="git"
wget="wget"
make="make"
java="java"
patch="patch"
tar="tar"
python="python"

case "`uname -s`" in
    "CYGWIN"* )
	echo "Using Cygwin on Windows is not a valid MetaDoctor option.  See the Wiki page and use WUBI instead."
	exit
	;;
    "Darwin" )
	tar=gnutar
	export COPYFILE_DISABLE=true
	export COPY_EXTENDED_ATTRIBUTES_DISABLE=true
	;;
esac

CUSTOM_XML="mantaray.xml"

rm -f ${CUSTOM_XML}

for f in $git $wget $make $java $patch $python $tar ; do
	
    which $f > /dev/null || { echo "Cannot find $f.  Please install it." ; exit ; }

done

ARGS=

if [ "$1" = "--wifi-only" ] ; then
    ARGS="BYPASS_ACTIVATION=1 BYPASS_FIRST_USE_APP=1 DISABLE_MODEM_UPDATE=1"
fi

ARGS="${ARGS} DISABLE_UPLOAD_DAEMON=1 DISABLE_UPDATE_DAEMON=1 CUSTOM_CARRIER_CHECK=ATT CUSTOM_MODEL_CHECK=HSTNH-F30CN CUSTOM_XML=${CUSTOM_XML} PATIENT=${PATIENT} VERSION=2.2.0 DEVICE=pre3 CARRIER=wr"

$make ${ARGS} settings

echo
echo "Your custom doctor file will be created at build/${PATIENT}/${W220_FILE}"
echo

mkdir -p downloads

[ ! -f downloads/${W220_FILE} ] && $wget -c ${W220_JAR_URL} -O downloads/${W220_FILE}

[ $(md5sum downloads/${W220_FILE} | cut -d \  -f 1) != ${W220_MD5} ] && \
        echo "${W220_FILE} did not download properly.  Please run this script again." && \
        rm -f downloads/${W220_FILE} && exit

# $make clobber

$make VERSION=2.2.0 DEVICE=pre3 CARRIER=wr unpack || exit

head -n 31 build/${W220_BUILD}/webOS/${CUSTOM_XML} >  ./${CUSTOM_XML}
echo '<Val name="DMCARRIER" value="ROW" action="overwrite"/>' >> ./${CUSTOM_XML}
echo '<Val name="DMMODEL" value="HSTNH-F30CE" action="overwrite"/>' >> ./${CUSTOM_XML}
echo '<Val name="MfgCode" value="" action="overwrite"/>' >> ./${CUSTOM_XML}
echo '<Val name="PN" value="180-10918-01" action="overwrite"/>' >> ./${CUSTOM_XML}
echo '<Val name="PRODoID" value="HSTNH-F30CE" action="overwrite"/>' >> ./${CUSTOM_XML}
echo '<Val name="ProductSKU" value="FB437AA#ABU" action="overwrite"/>' >> ./${CUSTOM_XML}
tail -n 47 build/${W220_BUILD}/webOS/${CUSTOM_XML} >> ./${CUSTOM_XML}

$make ${ARGS} clobber-build all || exit

$java -jar build/${PATIENT}/${W220_FILE} --auto

echo
echo "Your custom doctor file has been created at build/${PATIENT}/${W220_FILE}"
echo

rm -f ${WEBOS_TARBALL} ${CARRIER_TARBALL} ${CUSTOM_XML}
