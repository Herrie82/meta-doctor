#!/bin/bash
# meta-wr-pre3-impersonate-att-2.2.3 script
# Intended to flash EU Pre 3 phones so that they impersonate an AT&T Pre 3
#  Your mileage may vary

[ -d scripts ] || { echo "Run the script from the meta-doctor directory, not the scripts directory" ; exit ; }

A223_JAR_URL="http://palm.cdnetworks.net/rom/manta/p223r0d09272011/wdmantaatt/webosdoctorp223mantaatt.jar"

A223_FILE="webosdoctorp223mantaatt-2.2.3.jar"

A223_BUILD="pre3-p223manta-att-2.2.3"

A223_MD5="6453be81a391b78c56c24a77a9853226"

PATIENT="meta-wr-pre3-impersonate-att-2.2.3"

git="git"
wget="wget"
make="make"
java="java"
patch="patch"
tar="tar"
python="python"

case "`uname -s`" in
    "CYGWIN"* )
	echo "Using Cygwin on Windows is not a valid MetaDoctor option.  See the Wiki page and use WUBI instead."
	exit
	;;
    "Darwin" )
	tar=gnutar
	export COPYFILE_DISABLE=true
	export COPY_EXTENDED_ATTRIBUTES_DISABLE=true
	;;
esac

CUSTOM_XML="mantaray.xml"

rm -f ${CUSTOM_XML}

for f in $git $wget $make $java $patch $python $tar ; do
	
    which $f > /dev/null || { echo "Cannot find $f.  Please install it." ; exit ; }

done

ARGS=

if [ "$1" = "--wifi-only" ] ; then
    ARGS="BYPASS_ACTIVATION=1 BYPASS_FIRST_USE_APP=1 DISABLE_MODEM_UPDATE=1"
fi

ARGS="${ARGS} DISABLE_UPLOAD_DAEMON=1 DISABLE_UPDATE_DAEMON=1 CUSTOM_CARRIER_CHECK=ROW CUSTOM_MODEL_CHECK=HSTNH-F30CE CUSTOM_XML=${CUSTOM_XML} PATIENT=${PATIENT} VERSION=2.2.3 DEVICE=pre3 CARRIER=att"

$make ${ARGS} settings

echo
echo "Your custom doctor file will be created at build/${PATIENT}/${A223_FILE}"
echo

mkdir -p downloads

[ ! -f downloads/${A223_FILE} ] && $wget -c ${A223_JAR_URL} -O downloads/${A223_FILE}

[ $(md5sum downloads/${A223_FILE} | cut -d \  -f 1) != ${A223_MD5} ] && \
        echo "${A223_FILE} did not download properly.  Please run this script again." && \
        rm -f downloads/${A223_FILE} && exit

# $make clobber

$make VERSION=2.2.3 DEVICE=pre3 CARRIER=att unpack || exit

head -n 31 build/${A223_BUILD}/webOS/${CUSTOM_XML} >  ./${CUSTOM_XML}
echo '<Val name="DMCARRIER" value="ATT" action="overwrite"/>' >> ./${CUSTOM_XML}
echo '<Val name="DMMODEL" value="HSTNH-F30CN" action="overwrite"/>' >> ./${CUSTOM_XML}
echo '<Val name="MfgCode" value="" action="overwrite"/>' >> ./${CUSTOM_XML}
echo '<Val name="PN" value="180-10867-01" action="overwrite"/>' >> ./${CUSTOM_XML}
echo '<Val name="PRODoID" value="HSTNH-F30CN" action="overwrite"/>' >> ./${CUSTOM_XML}
echo '<Val name="ProductSKU" value="FB389AA#ABA" action="overwrite"/>' >> ./${CUSTOM_XML}
tail -n 47 build/${A223_BUILD}/webOS/${CUSTOM_XML} >> ./${CUSTOM_XML}

$make ${ARGS} clobber-build settings all || exit

$java -jar build/${PATIENT}/${A223_FILE} --auto

echo
echo "Your custom doctor file has been created at build/${PATIENT}/${A223_FILE}"
echo

rm -f ${WEBOS_TARBALL} ${CARRIER_TARBALL} ${CUSTOM_XML}
