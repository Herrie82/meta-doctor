#!/bin/bash
# meta-sprint-franken-verizon-pre2-2.0.1 script by Rod Whitby
# based on meta-meta script by Ed Cates
# intended to flash Sprint FrankenVerizonPre 2 phones with a working webOS 2.0.1 image
#  Your mileage may vary

[ -d scripts ] || { echo "Run the script from the meta-doctor directory, not the scripts directory" ; exit ; }

W201_JAR_URL="http://palm.cdnetworks.net/rom/pre2/p201r0d02172011/ver1z0np201rod/webosdoctorp102verizonwireless.jar"

W201_FILE="webosdoctorp102verizonwireless-2.0.1.jar"

W201_BUILD="pre2-p102eww-verizonwireless-2.0.1"

W201_MD5="643824a4c103e266fd8e2760b098815c"

PATIENT="meta-sprint-franken-verizon-pre2-2.0.1"

git="git"
wget="wget"
make="make"
java="java"
patch="patch"
tar="tar"
python="python"

case "`uname -s`" in
    "CYGWIN"* )
	echo "Using Cygwin on Windows is not a valid MetaDoctor option.  See the Wiki page and use WUBI instead."
	exit
	;;
    "Darwin" )
	tar=gnutar
	export COPYFILE_DISABLE=true
	export COPY_EXTENDED_ATTRIBUTES_DISABLE=true
	;;
esac

WEBOS_TARBALL="webOS.tar"
CARRIER_TARBALL="carrier.tar"
SRC_W201_FW="roadrunnercdma_fw.tar"
W201_FW="roadrunnercdmafw.tar"

for f in $git $wget $make $java $patch $python $tar ; do
	
    which $f > /dev/null || { echo "Cannot find $f.  Please install it." ; exit ; }

done

ARGS=
WR_IPKS=

if [ "$1" = "--wifi-only" ] ; then
    ARGS="BYPASS_ACTIVATION=1 BYPASS_FIRST_USE_APP=1 DISABLE_MODEM_UPDATE=1"
fi

ARGS="${ARGS} ENABLE_DEVELOPER_MODE=1 DISABLE_UPLOAD_DAEMON=1 PATIENT=${PATIENT} VERSION=2.0.1 DEVICE=pre2 CARRIER=verizonwireless"

$make ${ARGS} settings

echo
echo "Your custom doctor file will be created at build/${PATIENT}/${W210_FILE}"
echo

mkdir -p downloads

[ ! -f downloads/${W201_FILE} ] && $wget -c ${W201_JAR_URL} -O downloads/${W201_FILE}

[ $(md5sum downloads/${W201_FILE} | cut -d \  -f 1) != ${W201_MD5} ] && \
        echo "${W201_FILE} did not download properly.  Please run this script again." && \
        rm -f downloads/${W201_FILE} && exit

# $make clobber

$make VERSION=2.0.1 DEVICE=pre2 CARRIER=verizonwireless unpack || exit

$make ${ARGS} clobber-build all || exit

$java -jar build/${PATIENT}/${W201_FILE}

echo
echo "Your custom doctor file has been created at build/${PATIENT}/${W210_FILE}"
echo
