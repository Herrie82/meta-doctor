#!/bin/bash
# meta-verizon-preplus-2.1.0 script by Rod Whitby
# based on meta-meta script by Ed Cates
# intended to flash Verizon PrePlus phones with a working webOS 2.1 image
#  Your mileage may vary

[ -d scripts ] || { echo "Run the script from the meta-doctor directory, not the scripts directory" ; exit ; }

W145_JAR_URL="http://palm.cdnetworks.net/rom/preplus/p145r0d09132010/ver1z0np145rod/webosdoctorp101ewwverizonwireless.jar"
CDMA_JAR_URL="http://palm.cdnetworks.net/rom/pre2/p201r0d02172011/ver1z0np201rod/webosdoctorp102verizonwireless.jar"
W210_JAR_URL="http://palm.cdnetworks.net/rom/preplus/p210r0d02212011/eudep210rod/webosdoctorp101ueude-wr.jar"

W145_FILE="webosdoctorp101ewwverizonwireless-1.4.5.jar"
CDMA_FILE="webosdoctorp102verizonwireless-2.0.1.jar"
W210_FILE="webosdoctorp101ueude-wr-2.1.0.jar"

W145_BUILD="preplus-p101eww-verizonwireless-1.4.5"
CDMA_BUILD="pre2-p102eww-verizonwireless-2.0.1"
W210_BUILD="preplus-p101ueude-wr-2.1.0"

PATIENT="meta-verizon-preplus-2.1.0"

git="git"
wget="wget"
make="make"
java="java"
patch="patch"
tar="tar"

if [ "`uname -s`" == "Darwin" ] ; then 
    tar=gnutar
    export COPYFILE_DISABLE=true
    export COPY_EXTENDED_ATTRIBUTES_DISABLE=true
fi

WEBOS_TARBALL="webOS.tar"
CARRIER_TARBALL="carrier.tar"
SRC_CDMA_FW="roadrunnercdma_fw.tar"
CDMA_FW="castlecdmafw.tar"
BLD_INFO="palm-build-info"

rm -f ${CDMA_FW} ${WEBOS_TARBALL} ${CARRIER_TARBALL} ${BLD_INFO} ${BLD_INFO}-unmasqed

for f in $git $wget $make $java $patch; do
	
    which $f > /dev/null || { echo "Cannot find $f.  Please install it." ; exit ; }

done

ARGS=
VZW_IPKS=
WR_IPKS=
IPK_LIST=

VZW_IPKS="\
com.nim.vznavigator_*.ipk \
com.palm.app.mobilehotspot_*.ipk \
com.nim.app.vznavigator_*.ipk \
"

if [ "$1" = "--wifi-only" ] ; then
    ARGS="BYPASS_ACTIVATION=1 BYPASS_FIRST_USE_APP=1 DISABLE_MODEM_UPDATE=1"
    VZW_IPKS=
fi

VZW_IPKS="${VZW_IPKS} \
amazonservice_*.ipk \
com.palm.app.amazonstore_*.ipk \
crotestcastleplus-images_*.ipk \
palmcustomizationinfo-verizon_*.ipk"

WR_IPKS="contacts.plugin.pmvoicecommand_*.ipk \
pmvoicecommand-dede_*.ipk \
pmvoicecommand-engb_*.ipk \
pmvoicecommand-enus_*.ipk \
pmvoicecommand-eses_*.ipk \
pmvoicecommand-esmx_*.ipk \
pmvoicecommand-frca_*.ipk \
pmvoicecommand-frfr_*.ipk \
pmvoicecommand-itit_*.ipk \
pmvoicecommand_*.ipk \
sweatshop-wr-castle_*.ipk"

IPK_LIST=$( echo "${VZW_IPKS} ${WR_IPKS}"  | sed -e 's/ /;/g' -e 's/;;/;/g' )

ARGS="${ARGS} ENABLE_DEVELOPER_MODE=1 DISABLE_UPLOAD_DAEMON=1 DISABLE_UPDATE_DAEMON=1 CUSTOM_CARRIER_LIST=Verizon CUSTOM_MODEL_LIST=P101EWW CUSTOM_WEBOS_DMSET=520 CUSTOM_CARRIER_DMSET=524 CUSTOM_BUILD_INFO=palm-build-info CUSTOM_WEBOS_TARBALL=${WEBOS_TARBALL} CUSTOM_CARRIER_TARBALL=${CARRIER_TARBALL} CUSTOM_IPK_LIST=${IPK_LIST} PATIENT=${PATIENT} DEVICE=preplus CARRIER=wr"

$make ${ARGS} settings

echo
echo "Your custom doctor file will be created at build/${PATIENT}/${W210_FILE}"
echo

mkdir -p downloads

[ ! -f downloads/${W145_FILE} ] && $wget -c ${W145_JAR_URL} -O downloads/${W145_FILE}
[ ! -f downloads/${CDMA_FILE} ] && $wget -c ${CDMA_JAR_URL} -O downloads/${CDMA_FILE}
[ ! -f downloads/${W210_FILE} ] && $wget -c ${W210_JAR_URL} -O downloads/${W210_FILE}

# $make clobber

$make VERSION=1.4.5 DEVICE=preplus CARRIER=verizonwireless unpack || exit
$make VERSION=2.0.1 DEVICE=pre2 CARRIER=verizonwireless unpack || exit
$make VERSION=2.1.0 DEVICE=preplus CARRIER=wr unpack || exit

cp build/${W210_BUILD}/resources/${WEBOS_TARBALL} ./

cp build/${CDMA_BUILD}/webOS/${SRC_CDMA_FW} ${CDMA_FW}

$tar -C ./ -f ./${WEBOS_TARBALL} --delete ./${CDMA_FW} || exit
$tar -C ./ -f ./${WEBOS_TARBALL} --append ./${CDMA_FW} || exit

mkdir -p carrier

( cd build/${CDMA_BUILD}/carrier ; \
    $tar -c -f - ${VZW_IPKS} ) | ( cd carrier ; $tar -x -v -f - )
( cd build/${W210_BUILD}/carrier ; \
    $tar -c -f - installer.xml ${WR_IPKS} ) | ( cd carrier ; $tar -x -v -f - )
( cd carrier ; $tar -c -f ../${CARRIER_TARBALL} installer.xml *.ipk )

rm -rf carrier

head -n 1 build/${W210_BUILD}/rootfs/etc/${BLD_INFO} >  ./${BLD_INFO}
tail -n 4 build/${W145_BUILD}/rootfs/etc/${BLD_INFO} >> ./${BLD_INFO}

$make ${ARGS} clobber-build all || exit

$java -jar build/${PATIENT}/${W210_FILE}

rm -f ${CDMA_FW} ${WEBOS_TARBALL} ${CARRIER_TARBALL} ${BLD_INFO}
